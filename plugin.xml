<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Fault Localization"
            id="RegressionFinder.commands.category">
      </category>
      <command
            name="Localize Fault"
            categoryId="RegressionFinder.commands.category"
            id="RegressionFinder.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="RegressionFinder.commands.sampleCommand"
            class="regressionfinder.handlers.FaultLocalizationHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="RegressionFinder.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
      	 locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
            <command
                  commandId="RegressionFinder.commands.sampleCommand"
                  label="Localize Fault"
                  mnemonic="S"
                  id="RegressionFinder.menus.sampleCommand">
                    <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
            </command>
      </menuContribution>
   </extension>

</plugin>
